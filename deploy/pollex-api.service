[Unit]
Description=Pollex API â€” text polishing service
After=network.target llama-server.service
Wants=llama-server.service

[Service]
Type=simple
User=manu
ExecStart=/usr/local/bin/pollex --config /etc/pollex/config.yaml
Restart=on-failure
RestartSec=5
Environment=POLLEX_PROMPT_PATH=/etc/pollex/polish.txt
EnvironmentFile=-/etc/pollex/secrets.env

# Hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/var/log
PrivateTmp=true

[Install]
WantedBy=multi-user.target
