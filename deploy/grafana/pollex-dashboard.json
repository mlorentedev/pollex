{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "SLO Status (7-day rolling)",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 0.95 },
              { "color": "green", "value": 0.99 }
            ]
          },
          "unit": "percentunit",
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 5, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "title": "Availability",
      "description": "SLO: >= 99%. Composite: API up AND llamacpp available.",
      "targets": [
        {
          "expr": "avg_over_time((up{job=\"pollex\"} == bool 1 and on() pollex_adapter_available{adapter=\"llamacpp\"} == bool 1)[7d:1m])",
          "legendFormat": "availability"
        }
      ],
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 10 },
              { "color": "yellow", "value": 50 },
              { "color": "green", "value": 90 }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 5, "x": 5, "y": 1 },
      "id": 2,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "title": "Error Budget Remaining",
      "description": "Percentage of 7-day error budget (1%) not yet consumed.",
      "targets": [
        {
          "expr": "clamp_min(100 * (1 - (sum(increase(pollex_requests_total{path=\"/api/polish\",status=~\"5..\"}[7d])) / clamp_min(sum(increase(pollex_requests_total{path=\"/api/polish\"}[7d])), 1)) / 0.01), 0)",
          "legendFormat": "remaining"
        }
      ],
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.005 },
              { "color": "red", "value": 0.01 }
            ]
          },
          "unit": "percentunit"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 5, "x": 10, "y": 1 },
      "id": 3,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "title": "Error Rate (5xx)",
      "description": "SLO: < 1%. 5xx responses on /api/polish.",
      "targets": [
        {
          "expr": "sum(rate(pollex_requests_total{path=\"/api/polish\",status=~\"5..\"}[10m])) / clamp_min(sum(rate(pollex_requests_total{path=\"/api/polish\"}[10m])), 1e-10)",
          "legendFormat": "error_rate"
        }
      ],
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 15 },
              { "color": "red", "value": 20 }
            ]
          },
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 4, "x": 15, "y": 1 },
      "id": 4,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "title": "Latency p50",
      "description": "SLO: < 20s",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(pollex_polish_duration_seconds_bucket[10m]))",
          "legendFormat": "p50"
        }
      ],
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 45 },
              { "color": "red", "value": 60 }
            ]
          },
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 4, "w": 5, "x": 19, "y": 1 },
      "id": 5,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "title": "Latency p95",
      "description": "SLO: < 60s",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(pollex_polish_duration_seconds_bucket[10m]))",
          "legendFormat": "p95"
        }
      ],
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101,
      "title": "Traffic & Errors",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "lineWidth": 2, "fillOpacity": 10 } },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "id": 6,
      "options": { "tooltip": { "mode": "multi" } },
      "title": "Request Rate",
      "targets": [
        {
          "expr": "sum by (path) (rate(pollex_requests_total[5m]))",
          "legendFormat": "{{ path }}"
        }
      ],
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": { "lineWidth": 2, "fillOpacity": 15 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 0.01 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "id": 7,
      "options": { "tooltip": { "mode": "multi" } },
      "title": "Error Rate over Time",
      "targets": [
        {
          "expr": "sum(rate(pollex_requests_total{path=\"/api/polish\",status=~\"5..\"}[5m])) / clamp_min(sum(rate(pollex_requests_total{path=\"/api/polish\"}[5m])), 1e-10)",
          "legendFormat": "5xx rate"
        }
      ],
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 102,
      "title": "Latency",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "lineWidth": 2, "fillOpacity": 10 } },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "id": 8,
      "options": { "tooltip": { "mode": "multi" } },
      "title": "Polish Latency Percentiles",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(pollex_polish_duration_seconds_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(pollex_polish_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(pollex_polish_duration_seconds_bucket[5m]))",
          "legendFormat": "p99"
        }
      ],
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "none", "custom": { "lineWidth": 2, "fillOpacity": 20 } },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "id": 9,
      "options": { "tooltip": { "mode": "multi" } },
      "title": "Input Text Size (chars)",
      "targets": [
        {
          "expr": "rate(pollex_input_chars_sum[5m]) / clamp_min(rate(pollex_input_chars_count[5m]), 1e-10)",
          "legendFormat": "avg chars"
        }
      ],
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 103,
      "title": "Infrastructure",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 1,
          "custom": { "lineWidth": 2, "fillOpacity": 30 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 24 },
      "id": 10,
      "options": { "tooltip": { "mode": "multi" } },
      "title": "Adapter Availability",
      "targets": [
        {
          "expr": "pollex_adapter_available",
          "legendFormat": "{{ adapter }}"
        }
      ],
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 1,
          "custom": { "lineWidth": 2, "fillOpacity": 30 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 24 },
      "id": 11,
      "options": { "tooltip": { "mode": "multi" } },
      "title": "Pollex API Up",
      "targets": [
        {
          "expr": "up{job=\"pollex\"}",
          "legendFormat": "pollex"
        }
      ],
      "type": "timeseries"
    }
  ],
  "schemaVersion": 39,
  "tags": ["pollex", "sre", "slo"],
  "templating": {
    "list": [
      {
        "current": {},
        "hide": 0,
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus"
      }
    ]
  },
  "time": { "from": "now-7d", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Pollex SRE Overview",
  "uid": "pollex-sre",
  "version": 1
}
